<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bczm.com.eggapplication.MainActivity">

    <ImageView
        android:id="@+id/ivTiltEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:background="@mipmap/egg_tilt_l"
        android:text="Hello World!"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/ivEggBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/egg_bottom"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/ivEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/egg"
        android:text="Hello World!"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivPacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivEgg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@mipmap/egg_packet"
        android:visibility="gone" />


</RelativeLayout>
